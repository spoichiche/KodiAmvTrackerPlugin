<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.amvtracker" name="AmvTracker plugin" version="1.0.0" provider-name="spoichiche">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.python.library" library="script.py"/>
  <extension point="xbmc.addon.metadata">
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshots/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshots/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshots/screenshot-03.jpg</screenshot>
    </assets>
    <summary lang="en_GB">AmvTracker plugin</summary>
    <summary lang="fr_FR">AmvTracker plugin</summary>
    <description lang="en_GB">A plugin to access and manage an amv library created with AmvTracker.</description>
    <description lang="fr_FR">Plugin pour acceder et gérer une collection d'amv créée dans AmvTracker.</description>
    <platform>windows</platform>
    <license>GPL-2.0-only</license>
  </extension>
</addon>